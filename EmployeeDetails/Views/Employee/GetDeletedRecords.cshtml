
@{
    ViewBag.Title = "GetDeletedRecords";
}

<h2>GetDeletedRecords</h2>
<br />

<br />

<table class="table table-bordered">
    <tr>
        @*<th>Employee ID</th>*@
        <th>Name</th>
        <th>Department</th>
        <th>Age</th>
        <th>Skills</th>
        <th>Salary</th>

        <!-- Add additional columns as needed -->
    </tr>
    @foreach (var employee in Model)
    {

        <tr>
            @*<td>@employee.EmpID</td>*@
            <td>@employee.EName</td>
            <td>@employee.DeptName</td>
            <td>@employee.Age</td>
            <td>@employee.Skills</td>
            <td>@employee.Salary</td>

            <td>
                @Html.ActionLink("Restore", "Restore", new { id = employee.EmpID }, new { @class = "btn btn-primary" })



            </td>


            <!-- Add additional columns as needed -->
        </tr>

    }
</table>

